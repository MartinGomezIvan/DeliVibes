<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_Promociones"
    android:background="@drawable/fondo">
    <TextView
        android:id="@+id/textView19"
        android:layout_width="298dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="108dp"
        android:text="PROMOCIONES"
        android:textStyle="italic" />
    <!-- Bocadillo -->
    <LinearLayout
        android:id="@+id/bocadillo"
        android:layout_width="201dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="192dp"
        android:layout_marginTop="92dp"
        android:elevation="8dp"
        android:orientation="vertical"
        android:visibility="invisible"
        android:background="#66c2ff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consulte en atencíon al cliente en el restaurante para más info"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnOcultar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ocultar"
            android:layout_gravity="center"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="wrap_content"
            android:layout_height="344dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:background="#FFFFFF"
            android:elevation="6dp"
            android:padding="16dp"
            android:radius="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#162534">

                <!-- Nombre del producto -->
                <TextView
                    android:id="@+id/nombreProducto2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="3dp"
                    android:text="Comidas y cenas para bodas"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="italic" />

                <ImageView
                    android:id="@+id/imageView23"
                    android:layout_width="172dp"
                    android:layout_height="123dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="19dp"
                    android:src="@drawable/boda1" />

                <ImageView
                    android:id="@+id/imageView24"
                    android:layout_width="171dp"
                    android:layout_height="108dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="189dp"
                    android:layout_marginTop="26dp"
                    android:src="@drawable/comidaboda" />

                <TextView
                    android:layout_width="354dp"
                    android:layout_height="197dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="142dp"
                    android:text="En nuestro encantador restaurante, transformamos momentos especiales en recuerdos inolvidables. Con una combinación perfecta de exquisita gastronomía y un ambiente acogedor, estamos dedicados a hacer que cada boda sea verdaderamente memorable. Desde cenas íntimas hasta grandes celebraciones, nuestro equipo experto se encarga de cada detalle para garantizar una experiencia única y personalizada. Déjanos ser parte de tu día especial y crear juntos un banquete que no olvidarás jamás."
                    android:textColor="@color/white" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView1"
            android:layout_width="wrap_content"
            android:layout_height="350dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:background="#FFFFFF"
            android:elevation="6dp"
            android:padding="16dp"
            android:radius="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#162534">

                <!-- Nombre del producto -->
                <TextView
                    android:id="@+id/nombreProducto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="3dp"
                    android:text="Cumpleaños"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="italic" />

                <ImageView
                    android:id="@+id/imageView22"
                    android:layout_width="169dp"
                    android:layout_height="106dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="35dp"
                    android:src="@drawable/cumple1" />

                <ImageView
                    android:id="@+id/imageView25"
                    android:layout_width="190dp"
                    android:layout_height="111dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="174dp"
                    android:layout_marginTop="34dp"
                    android:src="@drawable/cumple2" />

                <TextView
                    android:layout_width="357dp"
                    android:layout_height="217dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="142dp"
                    android:text="En nuestro restaurante, celebrar un cumpleaños se convierte en una experiencia única y memorable. Con una combinación excepcional de deliciosa cocina y un ambiente acogedor, nos dedicamos a hacer de cada celebración un momento especial. Desde íntimas reuniones familiares hasta grandes fiestas con amigos, nuestro equipo se esmera en cada detalle para asegurar una experiencia personalizada y llena de diversión. Permítenos ser parte de tu día especial y crear juntos un evento en el que no faltará la alegría y los buenos momentos."
                    android:textColor="@color/white" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="wrap_content"
            android:layout_height="326dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:background="#FFFFFF"
            android:elevation="6dp"
            android:padding="16dp"
            android:radius="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#162534">

                <!-- Nombre del producto -->
                <TextView
                    android:id="@+id/nombreProducto3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="3dp"
                    android:text="Navidad y fin de año"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="italic" />

                <ImageView
                    android:id="@+id/imageView26"
                    android:layout_width="157dp"
                    android:layout_height="107dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="31dp"
                    android:src="@drawable/navidad1" />

                <ImageView
                    android:id="@+id/imageView27"
                    android:layout_width="180dp"
                    android:layout_height="114dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="188dp"
                    android:layout_marginTop="27dp"
                    android:src="@drawable/navidad2" />

                <TextView
                    android:layout_width="360dp"
                    android:layout_height="181dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="142dp"
                    android:text="En nuestro restaurante, la temporada de Navidad y Fin de Año se llena de magia y celebración. Sumérgete en un ambiente festivo mientras disfrutas de nuestra exquisita gastronomía y una atención excepcional. Desde cenas íntimas en Nochebuena hasta grandes celebraciones de Fin de Año, nuestro equipo está comprometido a hacer que cada momento sea especial. Déjanos ser parte de tus festividades y crear juntos recuerdos inolvidables mientras brindamos por un nuevo año lleno de esperanza y felicidad."
                    android:textColor="@color/white" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    </ScrollView>

</RelativeLayout>