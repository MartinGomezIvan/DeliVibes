<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="267dp"
                android:layout_height="228dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="216dp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="40dp"
                android:layout_height="36dp"
                android:layout_below="@id/calendarView"
                android:layout_marginStart="26dp"
                android:layout_marginTop="-318dp"
                android:layout_toEndOf="@+id/telefono"
                android:src="@drawable/baseline_local_phone_24" />


            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="40dp"
                android:layout_height="36dp"
                android:layout_below="@id/calendarView"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-375dp"
                android:layout_toEndOf="@+id/telefono"
                android:src="@drawable/baseline_drive_file_rename_outline_24" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="40dp"
                android:layout_height="36dp"
                android:layout_below="@id/calendarView"
                android:layout_marginStart="-39dp"
                android:layout_marginTop="476dp"
                android:layout_toEndOf="@+id/telefono"
                android:src="@drawable/baseline_people_24" />

            <EditText
                android:id="@+id/nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/calendarView"
                android:layout_alignParentStart="true"
                android:layout_marginStart="22dp"
                android:layout_marginTop="-377dp"
                android:ems="10"
                android:hint="Nombre"
                android:inputType="text" />

            <EditText
                android:id="@+id/telefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nombre"
                android:layout_alignParentStart="true"
                android:layout_marginStart="23dp"
                android:layout_marginTop="18dp"
                android:ems="10"
                android:hint="Teléfono"
                android:inputType="number" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/telefono"
                android:layout_alignParentStart="true"
                android:layout_marginStart="46dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="16dp"
                android:text="Día" />

            <TimePicker
                android:id="@+id/timePicker"
                android:layout_width="320dp"
                android:layout_height="340dp"
                android:layout_below="@id/textView16"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="282dp" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="23dp"
                android:layout_marginTop="883dp"
                android:layout_marginBottom="284dp"
                android:text="Número de personas" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="463dp"
                android:layout_marginEnd="369dp"
                android:layout_marginBottom="11dp"
                android:text="Hora" />

            <EditText
                android:id="@+id/tarjeta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="1069dp"
                android:layout_marginEnd="221dp"
                android:layout_marginBottom="2dp"
                android:ems="10"
                android:hint="Núm. Trajeta"
                android:inputType="number" />

            <EditText
                android:id="@+id/codigoPostal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="1114dp"
                android:layout_marginEnd="221dp"
                android:ems="10"
                android:hint="Cód. Postal"
                android:inputType="number" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="1036dp"
                android:layout_marginBottom="24dp"
                android:text="Confirmar Pago" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="1090dp"
                android:layout_marginEnd="62dp"
                android:onClick="pulsarBotonPagar"
                android:text="Pagar" />

            <EditText
                android:id="@+id/numeroPersonas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="911dp"
                android:layout_marginEnd="210dp"
                android:ems="10"
                android:hint="Ej: 4 personas"
                android:inputType="text" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
